package grafica;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.Line2D;
import java.awt.geom.Rectangle2D;
import java.util.Random;

public class Grafica {
	static String[] numeros;

	public Grafica(String[] numeros) {

		this.numeros = numeros;
	}

	public static void dibujar(Graphics2D g) {

		Line2D lin = new Line2D.Double(25, 30, 25, 330);
		g.draw(lin);
		Line2D lin2 = new Line2D.Double(25, 330, 275, 330);
		g.draw(lin2);

		Random rm = new Random();
		for (int i = 5; i <= 10; i++) {

			Rectangle2D rec = new Rectangle2D.Double(10 * (i - 4) + 30 * (i - 4) - 5, 330 - (calcular(i) * 30), 30,
					calcular(i) * 30);
			g.setColor(new Color(rm.nextInt(255), rm.nextInt(255), rm.nextInt(255)));
			g.fill(rec);
			g.drawString(Integer.toString(i), 10 * (i - 4) + 30 * (i - 4) + 5, 350);
		}
	}

	public static int calcular(int numero) {
		int c = 0;

		for (String string : numeros) {

			int num = Integer.parseInt(string);
			if (numero == num) {
				c++;
			}
		}
		return c;
	}
}
