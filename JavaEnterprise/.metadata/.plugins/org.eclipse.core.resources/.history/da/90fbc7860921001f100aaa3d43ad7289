package com.mime.minefront.graphics;

import com.mime.minefront.Game;

public class Render3D extends Render {
	public double[] zBuffer;
	private double renderDistance = 10000;

	public Render3D(int width, int heigh) {
		super(width, heigh);
		zBuffer = new double[width * heigh];

	}

	public void floor(Game game) {

		double floorPosition = 8;
		double cellinPosition = 8;
		double forward = game.controls.z;
		double right = game.controls.x;

		double rotation = game.controls.rotation;
		double cosine = Math.cos(rotation);
		double sine = Math.sin(rotation);

		for (int y = 0; y < height; y++) {
			double ceiling = (y - height / 2.0) / height;

			double z = floorPosition / ceiling;

			if (ceiling < 0) {
				z = cellinPosition / -ceiling;
			}

			for (int x = 0; x < width; x++) {
				double depth = (x - width / 2.0) / height;
				depth *= z;
				double xx = depth * cosine + z * sine;
				double yy = z * cosine - depth * sine;
				int xPin = (int) (xx + right);
				int yPin = (int) (yy + forward);
				zBuffer[x + y * width] = z;
				pixels[x + y * width] = ((xPin & 15) * 16) | ((yPin & 15) * 16) << 8;

				if (z > 200) {
					pixels[x + width * y] = 0;
				}
			}

		}
	}

	public void renderDistanceLimiter() {

		for (int i = 0; i < width * height; i++) {

			int colour = pixels[i];
			int brightness = (int) (renderDistance / zBuffer[i]);
			if (brightness < 0) {

				brightness = 0;
			}
			if (brightness > 255) {
				brightness = 255;
			}
			int r = (colour >> 16) & 0xff;
			int g = (colour >> 8) & 0xff;
			int b = (colour) & 0xff;
			r = r * brightness / 255;
			g = g * brightness / 255;
			b = b * brightness / 255;
			pixels[i] = r << 16 | g << 8 | b;
		}
	}
}
